<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lhy.ssm.dao.UserDao">
  <resultMap id="BaseResultMap" type="com.lhy.ssm.po.User">
    <id column="id" property="id"/>
    <result column="user_name" property="username"/>
    <result column="password" property="password"/>
    <result column="age" property="age"/>
    <result column="name" property="name"/>
    <result column="status" property="status"/>

    <result column="date_create" property="dateCreate"/>
    <result column="date_update" property="dateUpdate"/>
    <result column="date_delete" property="dateDelete"/>
    <result column="create_id" property="createId"/>
    <result column="update_id" property="updateId"/>
    <result column="delete_id" property="deleteId"/>
    <result column="deleted" property="deleted"/>
    <result column="version" property="version"/>
  </resultMap>
  <select id="selectById" parameterType="java.lang.String" resultMap="BaseResultMap">
    select id,user_name,password,age,name,status from user where id=#{id} and deleted=0
  </select>

  <insert id="insert" parameterType="com.lhy.ssm.po.User">
    insert into user(
      id,user_name,password,age,name,status,date_create,date_update,date_delete,
      create_id,update_id,delete_id,deleted,version)
    values(
      #{id},#{username},#{username},#{age},#{name},#{status},#{dateCreate},#{dateUpdate},#{dateDelete},
      #{createId},#{updateId},#{deleteId},#{deleted},#{version})
  </insert>

  <update id="update" parameterType="com.lhy.ssm.po.User">
    update user
    set user_name =
    <foreach collection="userList" item="user" open="case id" close="end">
      when #{user.id} then #{user.username}
    </foreach>
    ,password =
    <foreach collection="userList" item="user" open="case id" close="end">
      when #{user.id} then #{user.password}
    </foreach>
    where id in
    <foreach collection="userList" item="user" open="(" close=")" separator=",">
      #{user.id}
    </foreach>
    and deleted = 0
  </update>

  <select id="selectAll" resultMap="BaseResultMap">
    select id,user_name,password,age,name,status from user where deleted=0
  </select>
</mapper>