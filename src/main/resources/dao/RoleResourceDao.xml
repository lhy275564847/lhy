<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lhy.ssm.dao.RoleResourceDao">
  <resultMap id="BaseResultMap" type="com.lhy.ssm.po.RoleResource">
    <id column="id" property="id"/>
    <result column="role_id" property="roleId"/>
    <result column="resource_id" property="resourceId"/>

    <result column="date_create" property="dateCreate"/>
    <result column="date_update" property="dateUpdate"/>
    <result column="date_delete" property="dateDelete"/>
    <result column="create_id" property="createId"/>
    <result column="update_id" property="updateId"/>
    <result column="delete_id" property="deleteId"/>
    <result column="deleted" property="deleted"/>
    <result column="version" property="version"/>
  </resultMap>

  <insert id="insert" parameterType="com.lhy.ssm.po.RoleResource">
    insert into role_resource(
      id,role_id,resource_id,date_create,date_update,date_delete,
      create_id,update_id,delete_id,deleted,version)
    values(
      #{id},#{roleId},#{resourceId},#{dateCreate},#{dateUpdate},#{dateDelete},
      #{createId},#{updateId},#{deleteId},#{deleted},#{version})
  </insert>

  <select id="selectAll" resultMap="BaseResultMap">
    select id,role_id,resource_id
    from role_resource where deleted=0
  </select>
</mapper>