<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ocean.project.ssm.dao.RoleResourceDao">
  <resultMap id="BaseResultMap" type="RoleResource">
    <id column="id" property="id"/>
    <result column="role_id" property="roleId"/>
    <result column="resource_id" property="resourceId"/>
  </resultMap>

  <insert id="insert" parameterType="RoleResource">
    insert into role_resource(
      id,role_id,resource_id,create_date,update_date,delete_date,
      create_id,update_id,delete_id,deleted,version)
    values(
      #{id},#{roleId},#{resourceId},#{createDate},#{updateDate},#{deleteDate},
      #{createId},#{updateId},#{deleteId},#{deleted},#{version})
  </insert>

  <select id="selectAll" resultMap="BaseResultMap">
    select id,role_id,resource_id
    from role_resource where deleted=0
  </select>
</mapper>