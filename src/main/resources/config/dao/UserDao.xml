<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ocean.project.ssm.dao.UserDao">
  <resultMap id="BaseResultMap" type="User">
    <id column="id" property="id"/>
    <result column="user_name" property="username"/>
    <result column="password" property="password"/>
    <result column="age" property="age"/>
    <result column="name" property="name"/>
    <result column="sex" property="sex"/>
    <result column="status" property="status"/>
    <result column="is_enabled" property="isEnabled"/>
    <result column="date_create" property="dateCreate"/>
    <result column="date_update" property="dateUpdate"/>
    <result column="date_delete" property="dateDelete"/>
    <result column="create_id" property="createId"/>
    <result column="update_id" property="updateId"/>
    <result column="delete_id" property="deleteId"/>
    <result column="deleted" property="deleted"/>
    <result column="version" property="version"/>
  </resultMap>
  <select id="selectById" parameterType="com.ocean.project.ssm.query.UserQuery" resultMap="BaseResultMap">
    select id,user_name,password,age,name,sex,status,is_enabled
    from user where id=#{id} and deleted=0
  </select>

  <insert id="insert" parameterType="User">
    insert into user(
      id,user_name,password,age,name,sex,status,is_enabled,date_create,date_update,date_delete,
      create_id,update_id,delete_id,deleted,version)
    values(
      #{id},#{username},#{password},#{age},#{name},#{sex},#{status},#{isEnabled},#{dateCreate},#{dateUpdate},#{dateDelete},
      #{createId},#{updateId},#{deleteId},#{deleted},#{version})
  </insert>

  <update id="updateList" parameterType="User">
    update user
    set user_name =
    <foreach collection="userList" item="user" open="case id" close="end">
      when #{user.id} then #{user.username}
    </foreach>
    ,password =
    <foreach collection="userList" item="user" open="case id" close="end">
      when #{user.id} then #{user.password}
    </foreach>
    where id in
    <foreach collection="userList" item="user" open="(" close=")" separator=",">
      #{user.id}
    </foreach>
    and deleted = 0
  </update>

  <select id="selectAll" parameterType="com.ocean.project.ssm.query.UserQuery" resultMap="BaseResultMap">
    select * from user where deleted=0
    <if test="id !=null and id !=''">
      and id = #{id}
    </if>
  </select>

  <select id="selectByUsername" parameterType="java.lang.String" resultMap="BaseResultMap">
    select id,user_name,password,age,name,sex,status,is_enabled from user where deleted=0 and user_name = #{username}
  </select>
</mapper>