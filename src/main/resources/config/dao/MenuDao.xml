<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ocean.project.ssm.dao.MenuDao">

  <resultMap id="BaseResultMap" type="Menu">
    <id column="id" property="id"/>
    <result column="name" property="name"/>
    <result column="code" property="code"/>
    <result column="url" property="url"/>
    <result column="sort" property="sort"/>
    <result column="parent_id" property="parentId"/>
    <result column="date_create" property="dateCreate"/>
    <result column="date_update" property="dateUpdate"/>
    <result column="date_delete" property="dateDelete"/>
    <result column="create_id" property="createId"/>
    <result column="update_id" property="updateId"/>
    <result column="delete_id" property="deleteId"/>
    <result column="deleted" property="deleted"/>
    <result column="version" property="version"/>
  </resultMap>

  <resultMap id="MenuDtoMap" type="com.ocean.project.ssm.dto.MenuDto">
    <id column="id" property="id"/>
    <result column="name" property="name"/>
    <result column="url" property="url"/>
  </resultMap>

  <select id="selectById" resultMap="BaseResultMap" parameterType="java.lang.String">
    select id,name,code,parent_id,url,sort from menu where deleted=0 and id = #{id}
  </select>

  <select id="selectAllDto" resultMap="MenuDtoMap">
    select id,name,code,parent_id,url,sort from menu where deleted = 0
  </select>

  <insert id="insert" parameterType="Menu">
    insert into menu (
      id,name,code,parent_id,url,sort,date_create,date_update,date_delete,
      create_id,update_id,delete_id,deleted,version)
    values (
      #{id},#{name},#{code},#{parentId},#{url},#{sort},#{dateCreate},#{dateUpdate},#{dateDelete},
      #{createId},#{updateId},#{deleteId},#{deleted},#{version})
  </insert>
</mapper>